{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es5",
      "es6"
    ],
    "listEmittedFiles": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
    "@/*": [
      "./src/*"
    ]
    },
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "target": "es6"
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.js",
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}
